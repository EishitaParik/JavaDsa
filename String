 import java.util.*;
 class Main{
    public static void main(String args[]) {
        Scanner sc=new Scanner(System.in);
        String str=sc.next();

        int i=0, j=str.length()-1;
        boolean isPal=true;
        while(i<j){
            if(str.charAt(i) != str.charAt(j)) {
                isPal=false;
                break;
            }
            i++;
            j--;

        }
        System.out.println(isPal);
    }
 }